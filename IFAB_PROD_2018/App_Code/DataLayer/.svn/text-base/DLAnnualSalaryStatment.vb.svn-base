        arParms(6) = New SqlParameter("@Empid", SqlDbType.Int)
        arParms(6).Value = Empid


        Dim ds As New DataSet
        ds = SqlHelper.ExecuteDataset(connectionString, CommandType.StoredProcedure, "Proc_SalarySummaryStatment1", arParms)
        Return ds.Tables(0)

    End Function
